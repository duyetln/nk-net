<div class="wrapper post">
  <%= link_to image_tag("question.png", :class => "thumbnail"), user_path(post.user) %>
  <div class="container">
    <div class="owner">
      <%= link_to post.user.name, user_path(post.user) %>
      <% if post.user == current_user || current_user.has_role?(:admin) %>
        <%= form_tag post_path(post), :method => "DELETE", :class => "delete-form" do %>
          <%= submit_tag "", :type => :image, :src => asset_path("delete.png"), :class => "control", :id => "delete", :title => "Delete This Post" %>
        <% end %>
      <% end %>
    </div>
    <div class="content">
      <% if shorten %>
        <%= post.content[0..199] + '...' %><span><%= link_to "more", post_path(post) %></span>
      <% else %>
        <%= post.content %>
      <% end %>
    </div>
  </div>
  <div class="clear-all"></div>
</div>
