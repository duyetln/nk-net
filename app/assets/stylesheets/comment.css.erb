.comments .new-comment
{
  margin-top:10px;
  border-top:1px solid #dcdcdc;
  padding-top:10px;
  width:85%;
  float:right;
}

.new-comment .content
{
  float:left;
  width:75%;
  max-width:75%;
  height:30px;
  margin:0px;
}

.new-comment .button#new
{
  float:right;
  margin:0px;
}

.comments .comment 
{
  width:85%;
  margin-bottom:5px;
  float:right;
}

.comment .thumbnail, .new-comment .thumbnail
{
  background-color:#f5f5f5;
  width:10%;
  float:left;
  border:1px solid #dcdcdc;
}

.comment .container, .new-comment .container
{
  width:85%;
  float:right;
}

.comment .toolbar .tool
{
  visibility:hidden;
  float:right;
}

.comment .toolbar:hover .tool
{
  visibility:visible;
}

.comment .toolbar #delete
{
  width:16px;
  height:16px;
}

.comment h4
{
  float:left;
}

