.menu .control
{
  margin-bottom:10px;
  display:block;
  padding-left:50px;
  line-height:40px;
  height:40px;
}

.menu .control#posts
{
  background:url("post_list.svg") no-repeat;
}

.menu .control#pictures
{
  background:url("pic_list.svg") no-repeat;
}

.menu .control#tags
{
  background:url("tag.svg") no-repeat;
}

.menu h2
{
  font-weight:bold;
  font-size: 20px;
}

.menu h2:hover
{
  background-color:#e6e6fa;
}

.menu a
{
  color:black;
  text-decoration:none;
}
