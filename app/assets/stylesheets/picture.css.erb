.pictures .container
{
  width: 25%;
  float:left;
}

.pictures .container .thumbnail
{
  width:99%;
}

.pictures .container a
{
  padding-left:1%;
  padding-right:1%;
}

.new-picture
{
  border-top:1px solid #dcdcdc;
  padding-top:10px;
  margin-top:50px;
}

.new-picture .content
{
  float:left;
  width:75%;
  max-width:75%;
  height:30px;
  margin:0px;
}

.new-picture .button#new
{
  float:right;
  margin:0px;

}

.picture
{
  margin-bottom:30px;
}

.picture .thumbnail#photo
{
  width:100%;
}

.picture .thumbnail#owner-avatar
{
  background-color:#f5f5f5;
  width:10%;
  height:10%;
  float:left;
}

.picture .container .owner, .picture .container .content
{
  width:85%;
  float:right;
}

.picture .delete-form
{
  float:right;
}

.picture .control#delete
{
  width:16px;
  height:16px;
}

