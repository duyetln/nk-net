.new-tag, .edit-tags
{
  border-top:1px solid #dcdcdc;
  padding-top:10px;
  margin-top:50px;
}

.tag
{
  margin-right:10px;
  background-color:#dcdcdc;
  padding:0px 5px 0px 5px;
}

.edit-tags table
{
  float:left;
  width:50%;
}

.edit-tags table tr
{
  width:100%;
}

.edit-tags table td#value
{
  width:30%;
}

.edit-tags table td#delete
{
  width:10%;
}

.edit-tags table td#edit
{
  width:70%;
}

.edit-tags table td#edit form, .edit-tags table td#delete form
{
  width:100%;
}

.edit-tags table td#edit form .textbox
{
  width:50%;
  padding:1px;
}

.edit-tags table td#edit form input[type="submit"]
{
  width:40%;
  padding:1px;
}

.edit-tags table td#delete form input[type="submit"]
{
  background:none;
  border:none;
  color:red;
  text-decoration:underline;
  cursor:pointer;
}
