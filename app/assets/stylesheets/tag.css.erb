.new-tag
{
  border-top:1px solid #dcdcdc;
  padding-top:10px;
  margin-top:50px;
}

.tag
{
  float:left;
  margin-left:10px;
  background-color:#dcdcdc;
}

.tag .container#edit
{
  position:relative;
}

.tag .control#edit, .tag .control#delete
{
  width:16px;
  height:16px;
}

.tag .control#edit
{
  float:left;
}

.tag .toggle
{
  position:absolute;
  top:0px;
  left:0px;
  opacity:0;
  z-index:10;
  width:16px;
  height:16px;
  padding:0px;
  margin:0px;
  cursor:pointer;
}

.tag form.edit-tag
{
  margin-left:5px;
  display:none;
  float:left;
  height:16px;
}

.tag form.edit-tag .textbox
{
  width:75px;
  height:16px;
  padding:0px;
  margin:0px;
  border:none;
}

.tag form.edit-tag .button
{
  padding:0px;
}

.tag .toggle:checked +form
{
  display:inline;
}
