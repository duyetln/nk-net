.new-post
{
  border-top:1px solid #dcdcdc;
  padding-top:10px;
  margin-top:50px;
}

.new-post .content
{
  float:left;
  width:75%;
  max-width:75%;
  height:60px;
  margin:0px;
}

.new-post .button#new
{
  float:right;
  margin:0px;
}

.post
{
  margin-bottom:30px;
}

.post .delete-form
{
  float:right;
}

.post .control#delete
{
  width:16px;
  height:16px;
}

.post .thumbnail
{
  background-color:#f5f5f5;
  width:10%;
  float:left;
  border:1px solid #dcdcdc;
}

.post .container
{
  width:85%;
  float:right;
}

.post .owner
{
  margin-bottom:10px;
  border-bottom:1px solid #dcdcdc;
}

.post h3
{
  float:left;
}

