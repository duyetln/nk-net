.user .thumbnail
{
  width:70%;
  height:70%;
  float:left; 
  border:1px solid #dcdcdc;
  background-color:#f5f5f5;
}

.user #links
{
  margin-left:10px;
  width:13%;
  float:left;
}

.user #links .control
{
  width:100%;
}

.user .info
{
  margin-top:15px;
}

.user .info .stats
{
  margin-top:5px;
}

.user #edit #status, #right-content .user #admin
{
  margin-top:10px;
  padding-top:10px;
  border-top:1px solid #dcdcdc;
}

.user #edit #password table, .user #edit #status table
{
  width:100%;
}

.user  #edit #password table .field, .user  #edit #status table .field
{
  width:25%;
}

#left-content .user #admin
{
  margin-top:20px;
  width:70%;
}

#left-content .user #admin #role
{
  margin-top:10px;
}

#left-content .user #admin form input[type="submit"]
{
  width:100%;
}

#right-content #admin td#role, #right-content #admin td#status
{
  width:15%;
}

#right-content .user #admin table
{
  width:100%;
}

#right-content #admin input[type="submit"]
{
  width:90%;
}


