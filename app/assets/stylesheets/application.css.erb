body
{
  font-family: Arial, Helvetica, sans-serif;
  /*color: #7c7c7c;*/
  color:black;
  width:100%;
  font-size:14px;
}

a, a:link, a:visited, a:active
{
  color: #0d83d6;
  text-decoration:none;
}

a:hover
{
  text-decoration:underline; 
}

form td.field
{
  text-align:right;
  padding:0px 10px 0px 0px;
  font-weight:bold;
}

table
{
  border-collapse:collapse;
}

.clear-all
{   
  clear:both;
}

.wrapper, table, tbody, tr, td, h1, h2, h3, h4, h5, h6, p
{
  padding:0px;
  margin:0px;
}

.center
{
  margin:0px auto;
}

.holder
{
  width:800px;
}

.textbox
{
  padding:5px;
  border:1px solid #dcdcdc
}

.textbox:hover, .textbox:focus
{
  border:1px solid #0d83d6;
}

.button
{
  padding: 6px 15px;
  border:none;
  color:white;
  background-color:#0d83d6;
}

.button:hover
{
  cursor:pointer;
  background-color:#0c69ab;
}

.control, .deactivated
{
  opacity:0.6;
}

.control:hover, .control:active, .control:focus, .activated
{
  opacity:1;
}

#top-background
{
  background-color:#f5f5f5;
  border-bottom:1px solid #dcdcdc;
}

#logo
{   
  padding-top:20px;
  padding-bottom:10px;
  width:25%;
  height:40px;
  float:left;
}

#navigation
{   
  padding-top:20px;
  padding-bottom:10px;
  width:75%;
  height:40px;
  float:left;    
}

#left-content
{   
  padding-top:40px;
  padding-bottom:50px;
  width:25%;
  min-height:500px;
  float:left;
}

#right-content
{
  padding-top:40px;
  padding-bottom:50px;
  width:75%;
  min-height:500px;
  float:left;
}

#logo .align-left, #left-content .align-left
{
  margin-left:20px;
}

#logo .align-right, #left-content .align-right
{
  margin-right:15px;
}

#navigation .align-left
{
  margin-left:0px;
}

#right-content .align-left
{
  margin-left:20px;
}

#navigation .align-right, #right-content .align-right
{
  margin-right:20px;
}

#signin
{
  padding:20px 20px 10px 20px;
  height:40px;
}

#signup
{
  padding:40px 20px 50px 20px;
  float:right;
}

#signin-form
{
  float:right;
}

#signup-form
{
  margin-top:20px;
  border:1px solid #dcdcdc;
  background-color:#f5f5f5;
  padding:10px;
}

#search-form
{
  float:left;
}

#search-box
{
  background:url(<%= asset_path "search.svg" %>) no-repeat 1px 0px white;
  padding-left:31px;
  width:250px;
  height:16px;
}

.control#home, .control#profile
{
  margin-left:10px;
  float:right;
}

#logout-form
{
  margin-left:20px;
  float:right;
}

#navigation .control#home, #navigation .control#profile, #navigation .control#logout
{
  width:26px;
  height:26px;
}
