.tagging
{
  float:left;
  margin:10px 10px 0px 0px;
  background-color:#dcdcdc;
}

.tagging .tag
{
  margin:0px;
  padding:0px;
}

table.tagging tr td
{
  padding-left:5px;
}

.tagging .control#delete
{
  width:16px;
  height:16px;
  padding:0px;
  margin:0px;
  border:none;
  background-color:#dcdcdc;
  cursor:pointer;
}

.new-tagging
{
  position:relative;
}

.new-tagging .control
{
  width:16px;
  height:16px;
}

.new-tagging .tag-list
{
  position:absolute;
  top:18px;
  right:0px;
  display:none;
  background-color:#f5f5f5;
  border:1px solid #dcdcdc;
  padding:5px;
}

.new-tagging:hover .tag-list
{
  display:inline;
}
